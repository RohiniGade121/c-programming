/*ACCEPT YEAR AND YEAR IS LEAP OR NOT*/
#include<stdio.h>
void main()
{
    int y;
     printf("enter year");
     scanf("%d",&y);
      if(y%4==0)
       printf("year is leap");
      else 
       printf("year is not leap year"); 
}
---------------------------------------------------------------------------------
/*ACCEPT NUMBER AND SUM OF THE DIGIT*/
#include<stdio.h>
void main()
{
    int n,d,s=0;
     printf("enter number");
     scanf("%d",&n);
     while(n>0)
      {
        d=n%10;
        s=s+d;
        n=n/10;
      }
      printf("sum of digit=%d",s);
}
