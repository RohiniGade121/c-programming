/*ACCEPT NUMBER AND CHECK NUMBER IS EVEN OR ODD*/
#include<stdio.h>
void main()
{
    int n;
     printf("enter number");
     scanf("%d",&n);
     if(n%2==0)
      printf("number is even");
     else
      printf("number is odd"); 
 
}
-----------------------------------------------------------------------------------------------------
/*ACCEPT AN ARRAY AND DISPLAY IN REVERSE ORDER*/
#include<stdio.h>
void main()
{
    int a[100],i,n;
     printf("enter limit");
     scanf("%d",&n);
      printf("enter n numbers in an array");
       for(i=0;i<n;i++)
       {
        scanf("%d",&a[i]);
       }
      printf("array in reverse order");
       for(i=n-1;i>=0;i--)
        {
            printf("\t%d",a[i]);
        } 
}
